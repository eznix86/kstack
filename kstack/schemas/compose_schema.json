{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apps": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/app"
      }
    },
    "volumes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/volume"
      }
    },
    "configs": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/config"
      }
    },
    "secrets": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/secret"
      }
    }
  },
  "required": ["apps"],
  "definitions": {
    "app": {
      "type": "object",
      "properties": {
        "image": {
          "type": "string"
        },
        "ports": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "pattern": "^\\d+(?::\\d+)?(?:/(?:tcp|udp))?$"
              },
              {
                "type": "object",
                "properties": {
                  "target": { "type": "integer" },
                  "published": { "type": "integer" },
                  "protocol": {
                    "type": "string",
                    "enum": ["tcp", "udp"]
                  }
                },
                "required": ["target"]
              }
            ]
          }
        },
        "expose": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "port": { "type": "integer" },
                "protocol": {
                  "type": "string",
                  "enum": ["http", "https"]
                },
                "path": { "type": "string" },
                "ingressClassName": { "type": "string" }
              },
              "required": ["protocol"]
            }
          }
        },
        "volumes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "volumesFrom": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "config": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" }
                },
                "required": ["name"]
              },
              "mountPath": { "type": "string" }
            },
            "required": ["config"]
          }
        },
        "environment": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number", "boolean"]
          }
        },
        "envFrom": {
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "properties": {
                  "config": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" }
                    },
                    "required": ["name"]
                  }
                },
                "required": ["config"]
              },
              {
                "properties": {
                  "secret": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" }
                    },
                    "required": ["name"]
                  }
                },
                "required": ["secret"]
              }
            ]
          }
        },
        "sidecars": {
          "type": "object",
          "additionalProperties": {
            "allOf": [
              { "$ref": "#/definitions/app" },
              {
                "properties": {
                  "sidecars": { "not": {} }
                }
              }
            ]
          }
        }
      },
      "required": ["image"]
    },
    "volume": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "enum": ["local"]
        },
        "driver_opts": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "o": { "type": "string" },
            "device": { "type": "string" }
          }
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "external": { "type": "boolean" },
        "file": { "type": "string" }
      }
    },
    "secret": {
      "type": "object",
      "properties": {
        "external": { "type": "boolean" },
        "file": { "type": "string" }
      }
    }
  }
}
